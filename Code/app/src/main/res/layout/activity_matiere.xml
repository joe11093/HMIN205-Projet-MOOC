<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/activiteMatiereLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?android:attr/colorBackground">

        <TextView
            android:id="@+id/testMatiereFromRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />

        <LinearLayout
            android:id="@+id/activityMatiereLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"


            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnListVideos"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_lime_100"
                android:layout_weight="1.0"
                android:onClick="toListVideos"
                android:text="@string/presentations" />

            <Button
                android:id="@+id/btnListFicheCours"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_green_100"
                android:layout_weight="1.0"
                android:onClick="toListFicheDeCours"
                android:text="@string/fichesDeCours" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnListQCM"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_red_050"
                android:layout_weight="1.0"
                android:onClick="toListQCM"
                android:text="@string/QCMs" />

            <Button
                android:id="@+id/btnListQuestionsReponse"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/material_blue_100"
                android:layout_weight="1.0"
                android:onClick="toListQuestionsReponses"
                android:text="@string/questions_reponse" />

        </LinearLayout>
    </LinearLayout>